@page "/"
@page "/{CharacterName}"
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using System.Threading.Tasks

<MudGrid>
    <MudItem xs="8">
        <MudSelect T="string" Value="CharacterName" ValueChanged="LoadCharacter" Placeholder="Select Character">
            @foreach(var character in AvailableCharacters)
            {
                <MudSelectItem value="@character.CharacterName">@character.CharacterName</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="4" Class="d-flex justify-end flex-grow-1 gap-4">
        <MudButton Variant="Variant.Filled" @onclick="NewCharacter">New</MudButton>
        <MudButton Variant="Variant.Filled" @onclick="SaveCharacter">Save</MudButton>
    </MudItem>
</MudGrid>
<br />
<MudGrid>
    <MudItem xs="12" Class="d-flex justify-end flex-grow-1 gap-4">
        <MudButton Variant="Variant.Filled" @onclick="GoToRefView">Go To Reference View</MudButton>
    </MudItem>

    @* PERSONA SECTION *@
    <MudItem xs="12" md="6">
        Character Name: <MudTextField Variant="Variant.Outlined" @bind-Value="@Model.CharacterName" />
    </MudItem>
    <MudItem xs="12" md="6">
        Player Name: <MudTextField Variant="Variant.Outlined" @bind-Value="@Model.PlayerName" />
    </MudItem>
    <MudItem xs="12" md="6">
        Career: <MudTextField Variant="Variant.Outlined" @bind-Value="@Model.Career" />
    </MudItem>
    <MudItem xs="12" md="6">
        Species: <MudTextField Variant="Variant.Outlined" @bind-Value="@Model.Species" />
    </MudItem>
    <MudItem xs="12" md="12">
        Specialization(s): <MudTextField Variant="Variant.Outlined" @bind-Value="@Model.Specialization" />
    </MudItem>

    @* CHARACTERISTICS SECTION *@
    <MudItem xs="12">
        <MudText Typo="Typo.subtitle1" Class="subheader">Characteristics</MudText>
    </MudItem>
    <CustomCharacteristic Characteristic="@Model.Brawn" Readonly="false" />
    <CustomCharacteristic Characteristic="@Model.Agility" Readonly="false" />
    <CustomCharacteristic Characteristic="@Model.Intellect" Readonly="false" />
    <CustomCharacteristic Characteristic="@Model.Cunning" Readonly="false" />
    <CustomCharacteristic Characteristic="@Model.Willpower" Readonly="false" />
    <CustomCharacteristic Characteristic="@Model.Presence" Readonly="false" />

    <MudItem xs="12" Class="d-flex justify-center flex-grow-1">
        <MudGrid>
            <MudItem xs="4">
                <MudStack AlignItems="AlignItems.Center">
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.Soak" />
                    <MudText>Soak</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="4">
                <MudStack AlignItems="AlignItems.Center">
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.DefenseRanged" />
                    <MudText>Def. Ranged</MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="4">
                <MudStack AlignItems="AlignItems.Center">
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.DefenseMelee" />
                    <MudText>Def. Melee</MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudItem>

    @* ATTRIBUTES SECTION *@
    <MudItem xs="12">
    </MudItem>
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4">
            <MudGrid>
                <MudItem xs="6">
                    <MudText>Max Wounds</MudText>
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.WoundThreshold" />
                    <MudText>Wounds</MudText>
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.Current.Wounds" />
                </MudItem>
                <MudItem xs="6">
                    <MudText>Max Strain</MudText>
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.StrainThreshold" />
                    <MudText>Strain</MudText>
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="@Model.Current.Strain" />
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudTable Items="@Model.Current.CriticalInjuries" Breakpoint="Breakpoint.None">
            <ToolBarContent>
                <MudText>Critical Injuries</MudText>
                <MudSpacer/>
                <MudIconButton Icon="@Icons.Material.Outlined.Add" Variant="Variant.Outlined" Color="Color.Error" onclick="@AddInjury" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Injury</MudTh>
                <MudTh>Severity</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>
                    <MudInput Placeholder="Injury" Variant="Variant.Outlined" @bind-Value="context.Name" />
                </MudTd>
                <MudTd>
                    <MudNumericField Variant="Variant.Outlined" @bind-Value="context.Severity" />
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Outlined.Healing" Variant="Variant.Filled" Color="Color.Error" @onclick="() => RemoveInjury(context)"/>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudItem>

    @* WEAPONS SECTION *@

    <MudItem xs="12" Class="">
        <MudTable Items="@Model.Weapons" Breakpoint="Breakpoint.Xs" >
            <ToolBarContent>
                <MudText>Weapons</MudText>
                <MudSpacer />
                <MudIconButton Icon="@Icons.Material.Outlined.Add" Variant="Variant.Outlined" Color="Color.Primary" onclick="@AddWeapon" />
             </ToolBarContent>
            <HeaderContent>
                <MudTh>Weapon</MudTh>
                <MudTh>Range</MudTh>
                <MudTh>Skill</MudTh>
                <MudTh>Dmg</MudTh>
                <MudTh>Crit</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>
                    <MudInput Placeholder="Weapon" Variant="Variant.Outlined" @bind-Value="context.Name" />
                </MudTd>
                <MudTd>
                    <MudSelect Variant="Variant.Outlined" @bind-Value="context.Range">
                        <MudSelectItem Value="WeaponData.Range.Empty" Disabled>Select</MudSelectItem>
                        <MudSelectItem Value="WeaponData.Range.Engaged">Engaged</MudSelectItem>
                        <MudSelectItem Value="WeaponData.Range.Short">Short</MudSelectItem>
                        <MudSelectItem Value="WeaponData.Range.Medium">Medium</MudSelectItem>
                        <MudSelectItem Value="WeaponData.Range.Long">Long</MudSelectItem>
                        <MudSelectItem Value="WeaponData.Range.Extreme">Extreme</MudSelectItem>
                    </MudSelect>
                </MudTd>
                <MudTd>
                    <MudSelect Variant="Variant.Outlined" @bind-Value="context.Skill">
                        <MudSelectItem T="Skill" Disabled>Select</MudSelectItem>
                        @foreach(var skill in Model.Skills.Where(s => s.Type == Skill.SkillType.Combat))
                        {
                            <MudSelectItem Value="skill">@skill.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
                <MudTd>
                    <MudNumericField Placeholder="Damage" Min="0" Max="10" @bind-Value="context.Damage" />
                </MudTd>
                <MudTd>
                    <MudNumericField Placeholder="Critical" Min="0" Max="10" @bind-Value="context.Critical" />
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Outlined.Remove" Variant="Variant.Outlined" Color="Color.Error" @onclick="() => RemoveWeapon(context)" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudItem>

    @* SKILLS SECTIONS *@
    <MudItem xs="12">
        <MudDataGrid Items="Model.Skills" Hover Groupable Hideable ShowMenuIcon Breakpoint="Breakpoint.None">
            <ToolBarContent>
                <MudText>Skills</MudText>
            </ToolBarContent>
            <Columns>
                <PropertyColumn Property="s => s.IsCareerSkill" Title="Career?" Hidden="true">
                    <CellTemplate>
                        <MudCheckBox @bind-Value="@context.Item.IsCareerSkill" />
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="s => s.Name" Title="Name" Groupable="false" Hideable="false">
                    <CellTemplate>
                        <MudText>@context.Item.Name (@context.Item.Base.Abbreviation)</MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="s => s.Base.Name" Title="Base" Groupable="true" Hidden="true">
                    <CellTemplate></CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="s => s.Type" Title="Type" Groupable="true" Hidden="true" />
                <PropertyColumn Property="s => s.Ranks" Title="Ranks" Groupable="false" Hideable="false">
                    <CellTemplate>
                        <MudChipSet T="int" @bind-SelectedValue="context.Item.Ranks">
                            <MudChip Value="0">0</MudChip>
                            <MudChip Value="1">1</MudChip>
                            <MudChip Value="2">2</MudChip>
                            <MudChip Value="3">3</MudChip>
                            <MudChip Value="4">4</MudChip>
                            <MudChip Value="5">5</MudChip>
                        </MudChipSet>
                    </CellTemplate>
                </PropertyColumn>
            </Columns>
        </MudDataGrid>
    </MudItem>
</MudGrid>

@code
{
    [Parameter] public string? CharacterName { get; set; }
    [Inject] public required NavigationManager NavigationManager { get; set; }
    [Inject] public required StorageService Storage { get; set; }
    public List<CharacterModel> AvailableCharacters { get; set; } = [];
    public CharacterModel Model { get; set; } = new(true);

    protected override async Task OnInitializedAsync()
    {
        var json = await Storage.GetFromLocalStorage("Characters");
        if(string.IsNullOrWhiteSpace(json))
        {
            Console.WriteLine("No saved characters found.");
            return;
        }
        AvailableCharacters = JsonSerializer.Deserialize<List<CharacterModel>>(json) ?? [];
        if (!string.IsNullOrWhiteSpace(CharacterName))
        {
            await LoadCharacter(CharacterName);
        }
    }

    public void AddInjury()
    {
        Model.Current.CriticalInjuries.Add(new CriticalInjury
        {
            Name = "",
            Severity = 1
        });
    }

    public void AddWeapon()
    {
        Model.Weapons.Add(new WeaponModel());
    }

    public void RemoveInjury(CriticalInjury injury)
    {
        Model.Current.CriticalInjuries.Remove(injury);
    }

    public void RemoveWeapon(WeaponModel weapon)
    {
        Model.Weapons.Remove(weapon);
    }

    public async Task NewCharacter()
    {
        Console.WriteLine("Saving current character");
        await SaveCharacter();

        Console.WriteLine("Initializing new character");
        Model = new CharacterModel(true);
        StateHasChanged();
    }

    public async Task LoadCharacter(string characterName)
    {
        if(string.IsNullOrEmpty(characterName))
        {
            return;
        }
        var character = AvailableCharacters.FirstOrDefault(c => c.CharacterName == characterName);
        if(character is null)
        {
            Console.Error.WriteLine("ERROR: Character not found.");
            return;
        }
        Model = character;
        StateHasChanged();
    }

    public async Task SaveCharacter()
    {
        if(string.IsNullOrWhiteSpace(Model.CharacterName))
        {
            Console.Error.WriteLine("ERROR: Character must have a name to be saved.");
            return;
        }
        var existing = AvailableCharacters.FirstOrDefault(c => c.CharacterName == Model.CharacterName);
        if(existing != null)
        {
            Console.WriteLine("Updating existing character.");
            existing = Model;
        }
        else
        {
            Console.WriteLine("Saving new character.");
            AvailableCharacters.Add(Model);
        }
        await Storage.SetToLocalStorage("Characters", JsonSerializer.Serialize(AvailableCharacters));
    }

    public void GoToRefView() => NavigationManager.NavigateTo($"/sheet/{Model.CharacterName}");
}