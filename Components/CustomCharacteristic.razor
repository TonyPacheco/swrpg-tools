<MudItem xs="2" class="characteristic">
    <MudStack AlignItems="AlignItems.Center">
        @if (Readonly)
        {
            <MudAvatar Size="Size.Large" Variant="Variant.Filled">
                @Characteristic.Value
            </MudAvatar>
            <MudText Style="font-size: small">@Characteristic.Name</MudText>
        
        }
        else
        {
            <MudNumericField Variant="Variant.Outlined" @bind-Value="@Characteristic.Value" Min="0" Max="6" />
            <MudText>@Characteristic.Name</MudText>
        }
    </MudStack>
</MudItem>

@code 
{
    [Parameter, EditorRequired]
    public Characteristic Characteristic { get; set; }

    [Parameter, EditorRequired]
    public bool Readonly { get; set; }
}